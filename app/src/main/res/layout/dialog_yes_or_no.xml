<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/bg_dialog_yes_no"
    android:elevation="8dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/txtMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasdiqlash xabari"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bu amalni bajarishga ishonchingiz komilmi?"
        app:layout_constraintTop_toBottomOf="@id/txtMain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:textColor="@color/main_color"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <LinearLayout
        android:id="@+id/linearLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txtMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"/>

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:textSize="16sp"
        android:text="Bekor qilish"
        app:layout_constraintTop_toBottomOf="@id/linearLine"
        app:layout_constraintRight_toLeftOf="@id/btnDo"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/btnDo"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@drawable/bg_button"
        app:backgroundTint="@null"
        android:text="Bajarish"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/linearLine"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>