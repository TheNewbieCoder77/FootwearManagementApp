<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottomsheet_dialog"
    android:elevation="8dp"
    android:paddingBottom="16dp"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/titleModelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model nomi:"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/titleSkinType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teri nomi:"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleModelName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/titleColorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rangi:"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleSkinType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/titlePairCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soni:"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleColorName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/titleAddedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sotilgan vaqti:"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titlePairCount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/txtModelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0018"
        android:textColor="@color/additional_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/titleModelName"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtSkinType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nakat"
        android:textColor="@color/additional_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtModelName"
        app:layout_constraintStart_toStartOf="@id/txtModelName"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtColorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Qora"
        android:textColor="@color/additional_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtSkinType"
        app:layout_constraintStart_toStartOf="@id/txtModelName"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtPairCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5 ta"
        android:textColor="@color/additional_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtColorName"
        app:layout_constraintStart_toStartOf="@id/txtModelName"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtAddedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="18:34:00  11.12.2024"
        android:textColor="@color/additional_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtPairCount"
        app:layout_constraintStart_toStartOf="@id/txtModelName"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:layout_marginHorizontal="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleAddedTime"
        app:backgroundTint="@null"
        android:text="Yopish"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>