<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/bg_item_cut_skin"
    android:elevation="8dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Status: " />

    <TextView
        android:id="@+id/txtContragent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatus"
        android:text="Kontragent: " />


    <TextView
        android:id="@+id/txtMoneyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtContragent"
        android:text="Pul miqdori: " />


    <TextView
        android:id="@+id/txtSpendReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMoneyAmount"
        android:text="Oldi-berdi sababi: " />

    <TextView
        android:id="@+id/inputStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/additional_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtStatus"
        tools:text="To'lanishi kerak" />


    <TextView
        android:id="@+id/inputKontragentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/additional_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtContragent"
        tools:text="Bahrom aka" />

    <TextView
        android:id="@+id/inputMoneyAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/additional_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtMoneyAmount"
        tools:text="29 000 000.00" />

    <TextView
        android:id="@+id/inputSpendReasonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/additional_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtSpendReason"
        tools:text="asaf asdsd asd v s fad fadsf xc sa cxc sdc x czx sdc zx c" />


</androidx.constraintlayout.widget.ConstraintLayout>