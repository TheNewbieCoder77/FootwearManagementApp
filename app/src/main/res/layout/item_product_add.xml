<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_item_cut_skin"
    android:padding="8dp"
    android:elevation="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_cube"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.1"
        tools:text="Username"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"/>

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtProductName"
        app:layout_constraintStart_toEndOf="@id/imgCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        android:layout_marginTop="8dp"
        tools:text="78"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/additional_color"/>


    <TextView
        android:id="@+id/txtUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtProductName"
        app:layout_constraintStart_toEndOf="@id/txtCount"
        app:layout_constraintBottom_toBottomOf="@id/txtCount"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        tools:text="KG"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/additional_color"/>


    <TextView
        android:id="@+id/txtAnother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtUnit"
        app:layout_constraintStart_toEndOf="@id/imgCategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        android:layout_marginTop="8dp"
        tools:text="0107 qolipi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/additional_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>