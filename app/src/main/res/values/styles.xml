<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTextStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/main_color</item>
    </style>
    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_yes_no</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/additional_color</item>
        <item name="android:colorControlNormal">@color/additional_color</item>
    </style>
</resources>